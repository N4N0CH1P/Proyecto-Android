            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginStart="8dp"
            android:textSize="24sp"/>
    <TextView
            android:text="id-paciente-1212"
            android:layout_width="295dp"
            android:layout_height="34dp"
            android:id="@+id/textIDPaciente" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginStart="8dp"
