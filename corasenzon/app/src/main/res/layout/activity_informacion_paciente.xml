<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.InformacionPaciente">

    <TextView
        android:text="emai@correo.com"
        android:layout_width="376dp"
        android:layout_height="23dp"
        android:id="@+id/textEmail" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="1.0" android:textSize="18sp" android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/textFecha" android:layout_marginTop="4dp"/>
    <TextView
        android:text="H"
        android:layout_width="376dp"
        android:layout_height="23dp"
        android:id="@+id/textSexo" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="1.0" android:textSize="18sp" android:textAlignment="center"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textEmail"/>
    <TextView
        android:text="2012-12-12"
        android:layout_width="376dp"
        android:layout_height="23dp"
        android:id="@+id/textFecha" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="1.0" android:textSize="18sp" android:textAlignment="center"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textNombre"/>
    <TextView
        android:text="Nombre Paciente"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:id="@+id/textNombre" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
        android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="1.0" android:textSize="24sp" android:textAlignment="center"/>
    <Button
        android:text="Exportar a Excel"
        android:layout_width="382dp"
        android:layout_height="49dp"
        android:id="@+id/botonEnviarExcel" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/listViewHistorial"/>
    <ListView
        android:layout_width="395dp"
        android:layout_height="488dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" android:id="@+id/listViewHistorial"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textSexo"/>
</android.support.constraint.ConstraintLayout>
</ScrollView>