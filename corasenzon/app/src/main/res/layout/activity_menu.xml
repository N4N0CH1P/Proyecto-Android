<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MenuActivity">
    <Button
        android:text="Mis pacientes"
        android:layout_width="367dp"
        android:layout_height="83dp"
        android:id="@+id/botonMisPacientes" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/botonMiInformacion"
        app:layout_constraintHorizontal_bias="0.3"/>
    <ImageView
        android:layout_width="87dp"
        android:layout_height="70dp" app:srcCompat="@mipmap/ic_launcher_round"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:id="@+id/imageView"/>
    <TextView
        android:text="Bienvenido"
        android:layout_width="274dp"
        android:layout_height="33dp"
        android:id="@+id/textoBievenido"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView"
        android:layout_marginStart="8dp"/>
    <TextView
        android:text="No tienes sesion iniciada"
        android:layout_width="274dp"
        android:layout_height="33dp"
        android:id="@+id/textoNombreUsuario"
        android:textSize="24sp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView"
        android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintTop_toBottomOf="@+id/textoBievenido"/>
    <Button
        android:text="Registrar nueva presion"
        android:layout_width="367dp"
        android:layout_height="83dp"
        android:id="@+id/botonNuevaPresion" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.4" android:layout_marginTop="88dp"
        app:layout_constraintTop_toBottomOf="@+id/textoNombreUsuario"/>
    <Button
        android:text="Mi Informacion"
        android:layout_width="179dp"
        android:layout_height="84dp"
        android:id="@+id/botonMiInformacion"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/botonNuevaPresion" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/botonConsultarRegistros"
        android:layout_marginStart="8dp"/>
    <Button
        android:text="Historial"
        android:layout_width="179dp"
        android:layout_height="84dp"
        android:id="@+id/botonConsultarRegistros" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/botonNuevaPresion"/>
    <Button
        android:text="Iniciar Sesion"
        android:layout_width="358dp"
        android:layout_height="47dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
        android:id="@+id/botonSesion" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="0.486" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/botonMisPacientes" app:layout_constraintVertical_bias="0.925"/>
</android.support.constraint.ConstraintLayout>
</ScrollView>