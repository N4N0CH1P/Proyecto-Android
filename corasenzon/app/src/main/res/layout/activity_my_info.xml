<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.MyInfoAct">

    <ImageView
        android:layout_width="324dp"
        android:layout_height="327dp" app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" android:id="@+id/imagenCodigoQR" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"/>
    <TextView
        android:text="email@dominio.com"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:id="@+id/textEmail1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.492" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textFecha" android:textSize="18sp"
        android:textAlignment="center"/>
    <TextView
        android:text="Rango"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:id="@+id/textRango"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.463"
        android:textSize="24sp" android:textAlignment="center"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textSexo1"/>
    <TextView
        android:text="2012-02-02"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:id="@+id/textFechaNacimiento1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.492"
        android:textAlignment="center" android:textSize="18sp" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textEmail1"/>
    <TextView
        android:text="H"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:id="@+id/textSexo1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.492"
        android:textAlignment="center" android:textSize="18sp" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textFechaNacimiento1"/>
    <TextView
        android:text="Nombre Paciente"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:id="@+id/textFecha" android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/imagenCodigoQR" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.463" android:textSize="24sp" android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>